doctype 5
html
  head
    meta(charset='utf-8')
    title= title
    include /partials/humans
    include /partials/fonts
    style.
      body {
        color: #383838;
        background-color: #f5f5f5;
        font: normal 100%/1.4 'OFL Sorts Mill Goudy', 'OFL Sorts Mill Goudy TT', "Helvetica Neue", Helvetica, sans-serif;
        #font: 400 100%/1.4 "gloriola-web-1", "gloriola-web-2", "Helvetica Neue", Helvetica, sans-serif;
        margin: 30px auto;
        max-width: 1260px;
        padding: 0 4.761904761904762%;
        text-rendering: optimizeLegibilit;
        -webkit-font-smoothing: antialiased;
      }
      #i {
        -webkit-transition: border-color .2s ease-in-out, margin-top .2s ease-in-out;
        transition: border-color .2s ease-in-out, margin-top .2s ease-in-out;
        display: block;
        width: 140px;
        height: 140px;
        border: 5px solid #fff;
        box-shadow: 0 0 0 1px #dfdfdf;
        border-radius: 50%;
        margin: 0 auto;
        overflow: hidden;
      }
      #i:hover, #i:focus {
        margin-top: -5px;
        border-color: rgba(149, 201, 61, .5);
      }
      #coming { margin-top: 30px; text-align: center; }
  body
    section
      a#i(href='https://github.com/cfddream', target='_blank')
        img(alt='Dream', src='https://secure.gravatar.com/avatar/c062c91b987ba164275c0d973b475f3d?s=140&d=https://a248.e.akamai.net/assets.github.com%2Fimages%2Fgravatars%2Fgravatar-user-420.png')
      div#coming Coming soon.
    include /partials/analytics
